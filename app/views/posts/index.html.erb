<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post) do %>
    <%= attachment_image_tag post, :image %>
  <% end %>

    <!--<p>投稿ユーザー画像：<= image_tag('yamaarashi_dilemma.jpg') %></p>-->
  <p><%= post.body %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
  <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
   <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
</div>
<% end %>