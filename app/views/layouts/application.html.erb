<!DOCTYPE html>
<html>
  <head>
    <title>Agepan</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar-expand-lg navbar-light gnav" style="background-color: #e3f2fd";>
      <div class = "container">

        <div class="row">
          <div class="col-1">
            <%= link_to root_path, class: "navbar-brand" do %>
            <h2>Agepan</h2>
            <% end %>
          </div>
          <div class="col-9", style="margin-top: 5px;">
            <ul class ="navbar-nav　navbar-expand-lg">
              <% if user_signed_in? %>
                <div class="btn-group" role="group" aria-label="Basic example">
                  <button type="button" class="btn btn-light mx-2 "><%= link_to '新規投稿', new_post_path %></button>
                  <button type="button" class="btn btn-light mx-2 "><%= link_to '投稿一覧', posts_path %></button>
                  <button type="button" class="btn btn-light mx-2 "><%= link_to 'マイページ', user_path(current_user.id) %></button>
                  <button type="button" class="btn btn-light mx-2 "><%= link_to 'ユーザー一覧', users_path %></button>
                  <button type="button" class="btn btn-light mx-2 "><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></button>
                </div>
              <% elsif admin_signed_in? %>
                <li><%= link_to '投稿一覧', posts_path %></li>
                <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to "新規登録", new_user_registration_path %></li>
                <li><%= link_to "ログイン", new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
          <div class="col-2", style="margin-top: 10px;">
            <% if user_signed_in? %>
              <p class="text-right">ログイン中: <%= current_user.name %>さん<p>
            <% elsif admin_signed_in? %>
              <p>管理者</p>
            <% else %>
              <p>ゲストユーザー</p>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-12 text-right">
          <%= form_tag(search_path, method: :get) do %>
            <%= select_tag 'range', options_for_select([['--選択してください--', ''], ['User', '1'], ['Post', '2']]), class: 'form-janre'   %>
            <%= select_tag 'search', options_for_select([["前方一致","forward_match"], ["後方一致","backward_match"], ["完全一致","perfect_match"], ["部分一致","partial_match"]]), class: 'form-janre' %>
            <%= text_field_tag (:word) %>
            <%= submit_tag "検索", class: 'form-janre' %>
          <% end %>
          </div>
        </div>

      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
