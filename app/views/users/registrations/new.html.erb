<div class="container">
  <div class="row">
    <div class="col-8 offset-2", style="margin-top: 10px">
      <h2>ユーザーアカウント作成</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <!--サインアップ時に名前を入力できるようにフォームを追加-->
        <div class="field">
          <%= f.label :name, "ユーザー名" %><br/>
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上で作成してください)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <!--<= f.submit "アカウント作成" %>-->
          <%= button_tag "アカウント作成", :type => "submit", :class =>"btn btn-outline-success" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
    <div class="col-2"></div>
  </div>
</div>

