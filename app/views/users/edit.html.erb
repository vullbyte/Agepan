<div class="container">
  <div class="row">

    <div class="col-sm-5 offset-sm-2">
      <h2 class="mb-sm-4">profile edit</h2>
      <div class="row">
        <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <p>プロフィール画像</p>
          <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "90x90", fallback: "no_image.jpg" %><br>
          <div class="item_image_btn">
            <%= f.attachment_field :profile_image, id: "file" %>
          </div>
          <p id="img_field" onClick="$('#file').click()" >画像選択</p>
        </div>
        <div class="form-group">
          <p>名前</p>
          <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
        </div>
        <div class="form-group">
          <p>プロフィール</p>
          <%= f.text_field :profile, size: "30x10" %>
        </div>

          <%= button_tag "変更を保存する", :type => "submit", :class =>"btn btn-info float-center" %>
          <%= link_to unsubscribe_path(@user) do %>
            <button class="btn btn-danger ml-sm-5">退会する</button>
          <% end %>
        <% end %>

      </div>
    </div>

    <div class="col-sm-5"></div>

  </div>
</div>
